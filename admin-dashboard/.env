# ===============================
# üåê Backend API Configuration
# ===============================

# URL of your Laravel backend (used by Axios or Fetch)
VITE_API_BASE_URL=http://127.0.0.1:8000/api

# Optional: admin-specific route prefix if you have /api/admin routes
# VITE_API_ADMIN_URL=http://127.0.0.1:8000/api/admin


# ===============================
# üíª Frontend Configuration
# ===============================

# URL of the admin dashboard (Vite dev server)
VITE_APP_URL=http://localhost:5174

# The name that appears in the browser title / metadata
VITE_APP_NAME=DuroobOmanTours Admin Dashboard

# Environment type (used to toggle debug features)
VITE_APP_ENV=development


# ===============================
# üîê Authentication
# ===============================

# Storage key for admin JWT or Sanctum token
VITE_AUTH_TOKEN_KEY=admin_token

# Optional: Login redirect path
VITE_LOGIN_REDIRECT=/login


# ===============================
# üß© UI / Misc
# ===============================

# Default theme (light | dark | system)
VITE_DEFAULT_THEME=light

# Debug mode for logging API calls in console
VITE_DEBUG=false
